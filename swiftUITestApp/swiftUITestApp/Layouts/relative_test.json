{
  "type": "View",
  "width": "matchParent",
  "height": "matchParent",
  "background": "#F5F5F5",
  "orientation": "vertical",
  "child": [
    {
      "data": [
        {
          "name": "title",
          "class": "String",
          "defaultValue": "Relative Positioning Test"
        }
      ]
    },
    {
      "type": "Label",
      "id": "title_label",
      "width": "wrapContent",
      "height": "wrapContent",
      "topMargin": 20,
      "text": "@{title}",
      "fontSize": 24,
      "fontColor": "#000000"
    },
    {
      "type": "View",
      "width": "matchParent",
      "height": 400,
      "topMargin": 20,
      "background": "#E0E0E0",
      "child": [
        {
          "type": "Label",
          "id": "anchor_view",
          "width": 100,
          "height": 50,
          "text": "Anchor",
          "background": "#FF6B6B",
          "textAlign": "center",
          "fontColor": "#FFFFFF",
          "centerInParent": true
        },
        {
          "type": "Label",
          "id": "top_aligned",
          "width": "wrapContent",
          "height": "wrapContent",
          "text": "alignTopView",
          "background": "#4ECDC4",
          "padding": 5,
          "alignTopView": "anchor_view",
          "leftMargin": 120
        },
        {
          "type": "Label",
          "id": "bottom_aligned",
          "width": "wrapContent",
          "height": "wrapContent",
          "text": "alignBottomView",
          "background": "#45B7D1",
          "padding": 5,
          "alignBottomView": "anchor_view",
          "leftMargin": 120
        },
        {
          "type": "Label",
          "id": "left_aligned",
          "width": "wrapContent",
          "height": "wrapContent",
          "text": "alignLeftView",
          "background": "#96CEB4",
          "padding": 5,
          "alignLeftView": "anchor_view",
          "topMargin": 70
        },
        {
          "type": "Label",
          "id": "right_aligned",
          "width": "wrapContent",
          "height": "wrapContent",
          "text": "alignRightView",
          "background": "#FFEAA7",
          "padding": 5,
          "alignRightView": "anchor_view",
          "topMargin": 100
        },
        {
          "type": "Label",
          "id": "above_view",
          "width": "wrapContent",
          "height": "wrapContent",
          "text": "alignTopOfView",
          "background": "#DFE6E9",
          "padding": 5,
          "alignTopOfView": "anchor_view",
          "centerHorizontal": true
        },
        {
          "type": "Label",
          "id": "below_view",
          "width": "wrapContent",
          "height": "wrapContent",
          "text": "alignBottomOfView",
          "background": "#B2BEC3",
          "padding": 5,
          "alignBottomOfView": "anchor_view",
          "centerHorizontal": true
        },
        {
          "type": "Label",
          "id": "left_of_view",
          "width": "wrapContent",
          "height": "wrapContent",
          "text": "alignLeftOfView",
          "background": "#FAB1A0",
          "padding": 5,
          "alignLeftOfView": "anchor_view",
          "centerVertical": true
        },
        {
          "type": "Label",
          "id": "right_of_view",
          "width": "wrapContent",
          "height": "wrapContent",
          "text": "alignRightOfView",
          "background": "#74B9FF",
          "padding": 5,
          "alignRightOfView": "anchor_view",
          "centerVertical": true
        }
      ]
    },
    {
      "type": "Label",
      "text": "Offset Positioning",
      "fontSize": 18,
      "fontColor": "#333333",
      "topMargin": 20,
      "font": "bold"
    },
    {
      "type": "View",
      "width": "matchParent",
      "height": 200,
      "topMargin": 10,
      "background": "#D0D0D0",
      "child": [
        {
          "type": "Label",
          "width": "wrapContent",
          "height": "wrapContent",
          "text": "offsetX: 50, offsetY: 30",
          "background": "#A29BFE",
          "padding": 10,
          "offsetX": 50,
          "offsetY": 30
        },
        {
          "type": "Label",
          "width": "wrapContent",
          "height": "wrapContent",
          "text": "offsetX: -30, offsetY: 80",
          "background": "#6C5CE7",
          "fontColor": "#FFFFFF",
          "padding": 10,
          "offsetX": -30,
          "offsetY": 80,
          "alignRight": true
        }
      ]
    }
  ]
}
