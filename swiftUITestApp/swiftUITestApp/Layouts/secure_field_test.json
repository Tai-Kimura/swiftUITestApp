{
  "type": "View",
  "width": "matchParent",
  "height": "matchParent",
  "background": "#F8F8F8",
  "orientation": "vertical",
  "child": [
    {
      "type": "Button",
      "style": "dynamic_toggle"
    },
    {
      "type": "Label",
      "id": "title_label",
      "width": "wrapContent",
      "height": "wrapContent",
      "topMargin": 20,
      "text": "@{title}",
      "fontSize": 24,
      "fontColor": "#000000"
    },
    {
      "type": "Label",
      "text": "Regular TextField (not secure)",
      "fontSize": 14,
      "fontColor": "#666666",
      "topMargin": 30
    },
    {
      "type": "TextField",
      "id": "regular_field",
      "width": "matchParent",
      "height": 44,
      "topMargin": 10,
      "leftMargin": 20,
      "rightMargin": 20,
      "hint": "Enter regular text",
      "text": "@{regularText}",
      "background": "#FFFFFF",
      "padding": 10,
      "cornerRadius": 8,
      "borderColor": "#CCCCCC",
      "borderWidth": 1,
      "secure": false
    },
    {
      "type": "Label",
      "text": "Secure TextField (password)",
      "fontSize": 14,
      "fontColor": "#666666",
      "topMargin": 20
    },
    {
      "type": "TextField",
      "id": "password_field",
      "width": "matchParent",
      "height": 44,
      "topMargin": 10,
      "leftMargin": 20,
      "rightMargin": 20,
      "hint": "Enter password",
      "text": "@{password}",
      "background": "#FFFFFF",
      "padding": 10,
      "cornerRadius": 8,
      "borderColor": "#CCCCCC",
      "borderWidth": 1,
      "secure": true
    },
    {
      "type": "Label",
      "text": "Confirm Password (also secure)",
      "fontSize": 14,
      "fontColor": "#666666",
      "topMargin": 20
    },
    {
      "type": "TextField",
      "id": "confirm_password_field",
      "width": "matchParent",
      "height": 44,
      "topMargin": 10,
      "leftMargin": 20,
      "rightMargin": 20,
      "hint": "Confirm password",
      "text": "@{confirmPassword}",
      "background": "#FFFFFF",
      "padding": 10,
      "cornerRadius": 8,
      "borderColor": "#CCCCCC",
      "borderWidth": 1,
      "secure": true
    },
    {
      "type": "View",
      "width": "matchParent",
      "height": "wrapContent",
      "topMargin": 30,
      "leftMargin": 20,
      "rightMargin": 20,
      "padding": 15,
      "background": "#E0E0E0",
      "cornerRadius": 8,
      "orientation": "vertical",
      "child": [
        {
          "type": "Label",
          "text": "Values entered:",
          "fontSize": 14,
          "fontColor": "#333333",
          "font": "bold"
        },
        {
          "type": "Label",
          "text": "Regular: @{regularText}",
          "fontSize": 12,
          "fontColor": "#666666",
          "topMargin": 5
        },
        {
          "type": "Label",
          "text": "Password: [hidden]",
          "fontSize": 12,
          "fontColor": "#666666",
          "topMargin": 5
        },
        {
          "type": "Label",
          "text": "Confirm: [hidden]",
          "fontSize": 12,
          "fontColor": "#666666",
          "topMargin": 5
        }
      ]
    }
  ],
  "data": [
    {
      "name": "dynamicModeStatus",
      "class": "String",
      "defaultValue": "OFF"
    },
    {
      "name": "confirmPassword",
      "class": "String",
      "defaultValue": ""
    },
    {
      "name": "password",
      "class": "String",
      "defaultValue": ""
    },
    {
      "name": "regularText",
      "class": "String",
      "defaultValue": ""
    },
    {
      "name": "title",
      "class": "String",
      "defaultValue": "Secure Field Test"
    }
  ]
}