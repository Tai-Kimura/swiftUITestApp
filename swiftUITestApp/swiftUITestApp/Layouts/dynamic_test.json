{
  "type": "ScrollView",
  "background": "#F5F5F5",
  "child": {
    "type": "View",
    "orientation": "vertical",
    "padding": 20,
    "child": [
      {
        "type": "Label",
        "text": "Dynamic View Test",
        "fontSize": 24,
        "fontColor": "#333333",
        "font": "bold",
        "textAlign": "center",
        "bottomMargin": 20
      },
      {
        "type": "View",
        "orientation": "horizontal",
        "background": "#FFFFFF",
        "padding": 15,
        "cornerRadius": 8,
        "bottomMargin": 15,
        "child": [
          {
            "type": "Label",
            "text": "Left",
            "fontColor": "#007AFF",
            "weight": 1
          },
          {
            "type": "Label",
            "text": "Center",
            "fontColor": "#FF3B30",
            "textAlign": "center",
            "weight": 2
          },
          {
            "type": "Label",
            "text": "Right",
            "fontColor": "#34C759",
            "textAlign": "right",
            "weight": 1
          }
        ]
      },
      {
        "type": "Button",
        "text": "Test Button",
        "background": "#007AFF",
        "fontColor": "#FFFFFF",
        "padding": 15,
        "cornerRadius": 8,
        "bottomMargin": 15,
        "onclick": "handleButtonClick"
      },
      {
        "type": "View",
        "height": "200",
        "background": "#E5E5EA",
        "cornerRadius": 8,
        "bottomMargin": 15,
        "child": [
          {
            "type": "Label",
            "text": "Top Left",
            "alignParentTop": true,
            "alignParentLeft": true,
            "padding": 10
          },
          {
            "type": "Label",
            "text": "Center",
            "centerInParent": true,
            "fontColor": "#FF3B30"
          },
          {
            "type": "Label",
            "text": "Bottom Right",
            "alignParentBottom": true,
            "alignParentRight": true,
            "padding": 10
          }
        ]
      },
      {
        "type": "View",
        "visibility": "visible",
        "background": "#C7C7CC",
        "padding": 10,
        "cornerRadius": 8,
        "bottomMargin": 15,
        "child": {
          "type": "Label",
          "text": "This should be visible",
          "fontColor": "#FFFFFF"
        }
      },
      {
        "type": "View",
        "visibility": "gone",
        "background": "#FF3B30",
        "padding": 10,
        "cornerRadius": 8,
        "bottomMargin": 15,
        "child": {
          "type": "Label",
          "text": "This should be hidden",
          "fontColor": "#FFFFFF"
        }
      },
      {
        "type": "Toggle",
        "text": "Enable Feature",
        "isOn": true,
        "bottomMargin": 15
      },
      {
        "type": "Progress",
        "text": "Loading...",
        "progress": 0.7,
        "bottomMargin": 15
      },
      {
        "type": "Slider",
        "text": "Volume",
        "value": 0.5,
        "minValue": 0.0,
        "maxValue": 1.0,
        "bottomMargin": 15
      }
    ]
  }
}