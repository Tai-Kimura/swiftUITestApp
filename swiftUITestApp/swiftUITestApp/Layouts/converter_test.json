{
  "type": "ScrollView",
  "width": "matchParent",
  "height": "matchParent",
  "background": "#F5F5F5",
  "child": [
    {
      "type": "View",
      "width": "matchParent",
      "height": "wrapContent",
      "orientation": "vertical",
      "child": [
        {
          "data": [
            {
              "name": "title",
              "class": "String",
              "defaultValue": "Converter Components Test"
            },
            {
              "name": "items",
              "class": "CollectionDataSource",
              "defaultValue": "CollectionDataSource()"
            }
          ]
        },
        {
          "type": "Label",
          "text": "@{title}",
          "fontSize": 24,
          "fontColor": "#000000",
          "topMargin": 20,
          "bottomMargin": 20
        },
        {
          "type": "Label",
          "text": "GradientView Test",
          "fontSize": 18,
          "fontColor": "#333333",
          "topMargin": 10
        },
        {
          "type": "GradientView",
          "width": "matchParent",
          "height": 100,
          "topMargin": 10,
          "colors": ["#FF0000", "#00FF00", "#0000FF"],
          "startPoint": {"x": 0, "y": 0},
          "endPoint": {"x": 1, "y": 1},
          "child": [
            {
              "type": "Label",
              "text": "Diagonal Gradient",
              "fontSize": 16,
              "fontColor": "#FFFFFF",
              "centerInParent": true
            }
          ]
        },
        {
          "type": "Label",
          "text": "BlurView Test",
          "fontSize": 18,
          "fontColor": "#333333",
          "topMargin": 20
        },
        {
          "type": "BlurView",
          "width": "matchParent",
          "height": 100,
          "topMargin": 10,
          "blurRadius": 10,
          "child": [
            {
              "type": "Label",
              "text": "Blurred Background",
              "fontSize": 16,
              "fontColor": "#000000",
              "centerInParent": true
            }
          ]
        },
        {
          "type": "Label",
          "text": "WebView Test",
          "fontSize": 18,
          "fontColor": "#333333",
          "topMargin": 20
        },
        {
          "type": "WebView",
          "width": "matchParent",
          "height": 200,
          "topMargin": 10,
          "url": "https://www.example.com"
        },
        {
          "type": "Label",
          "text": "TabView Test",
          "fontSize": 18,
          "fontColor": "#333333",
          "topMargin": 20
        },
        {
          "type": "TabView",
          "width": "matchParent",
          "height": 200,
          "topMargin": 10,
          "selectedTabIndex": 0,
          "tabs": [
            {
              "title": "Tab 1",
              "child": [
                {
                  "type": "Label",
                  "text": "Content of Tab 1",
                  "fontSize": 14,
                  "centerInParent": true
                }
              ]
            },
            {
              "title": "Tab 2",
              "child": [
                {
                  "type": "Label",
                  "text": "Content of Tab 2",
                  "fontSize": 14,
                  "centerInParent": true
                }
              ]
            }
          ]
        },
        {
          "type": "Label",
          "text": "Collection Test",
          "fontSize": 18,
          "fontColor": "#333333",
          "topMargin": 20
        },
        {
          "type": "Collection",
          "width": "matchParent",
          "height": 300,
          "topMargin": 10,
          "cellClasses": ["ConverterTestCell"],
          "items": "@{items}"
        },
        {
          "type": "Label",
          "text": "Image Test",
          "fontSize": 18,
          "fontColor": "#333333",
          "topMargin": 20
        },
        {
          "type": "Image",
          "width": 100,
          "height": 100,
          "topMargin": 10,
          "srcName": "star.fill",
          "defaultImage": "exclamationmark.triangle",
          "contentMode": "scaleAspectFit"
        }
      ]
    }
  ]
}
